* {
    background-image: url("media/3d_star_gif.gif");
}

table,
th,
td {
    border: 4px solid rgb(97, 86, 247);
    border-radius: 10px;
    color: rgb(217, 236, 252);
    font-weight: bold;
    font-size: 20px;
    font-family: verdana;
}

#table {
    margin-left: auto;
    margin-right: auto;
    padding: 5px;
}

#planets {
    text-align: center;
    font-size: 30px;
    color: rgb(212, 214, 71);
    font-family: fantasy;
}

#sun {
    text-align: center;
    height: 25px;
}