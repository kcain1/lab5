* {
    background-image: url("images/planets2.gif");
	background-repeat: no-repeat;
}

table,
th,
td {
    border: 5px solid rgb(0, 0, 255);
    border-radius: 20px;
    color: green;
    font-weight: bold;
    font-size: 30px;
    font-family: cursive;
}

#table {
    margin-left: auto;
    margin-right: auto;
    padding: 5px;
}

#planets {
    text-align: center;
    font-size: 50px;
    color: crimson;
    font-family: system-ui;
}

#sun {
    text-align: center;
    height: 25px;
}